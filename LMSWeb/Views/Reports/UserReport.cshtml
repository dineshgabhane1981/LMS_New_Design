@model List<LMSBL.DBModels.UserReportModel>
@{
    ViewBag.Title = "User Report";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-4 mb-4 pl-4 pr-4">
    <div class="row user-quiz-top-section mb-2 mt-3 p-2 user-report list-box">
        <div class="content">
            <div class="card">
                <div class="col-md-12">                    
                    <div class="float-right">
                        <div class="grey-color" style="margin-top:10px;display:flex;">
                            Date Created: &nbsp;&nbsp;
                            <input class="form-control datepicker" type="text" id="fDate" readonly name="fDate" placeholder="Select From Date">&nbsp;&nbsp;
                            <input class="form-control datepicker" type="text" id="tDate" readonly name="tDate" placeholder="Select To Date">&nbsp;&nbsp;
                            <button type="submit" id="btnFilter" class="btn btn-primary mr-4" onclick="FilterResult();"><img src="~/assets/images/check-img.png" width="20" height="20" /> Apply</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid mt-4 mb-4 pl-4 pr-4" id="dvActivityData">
        @Html.Partial("~/Views/Reports/_UserReportList.cshtml", Model)

    </div>
</div>

<script>
    $(document).ready(function () {

        $('#fDate').datepicker({
            format: 'mm/dd/yyyy',
            showWeek: true
        });

        $('#tDate').datepicker({
            format: 'mm/dd/yyyy',
            showWeek: true
        });
    });

    function FilterResult() {
        var params = new URLSearchParams(window.location.search);
        var isActive = params.get('isActive');
        var fDate = $('#fDate').val();
        var tDate = $('#tDate').val();

        $.ajax({
            type: "POST",
            url: "/Reports/GetFilteredData",
            data: '{isActive: "' + isActive + '",fDate: "' + fDate + '",tDate: "' + tDate + '",ReportName: "UserReport" }',
            contentType: "application/json; charset=utf-8",
            dataType: "html",
            success: function (response) {
                console.log(response);
                $('#dvActivityData').html(response);
            },
            failure: function (response) {
                console.log(response);
            },
            error: function (response) {
                console.log(response);
            }
        });
    }

</script>
