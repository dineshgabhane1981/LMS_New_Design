@model LMSBL.DBModels.TblUser
@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("AddUser", "User", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.UserId)
    @Html.HiddenFor(model => model.RoleId)
    @Html.HiddenFor(model => model.IsMyProfile)
    <div class="content">
        <div class="container-fluid">
            <div class="row" style="margin-top:50px;">
                <div class="col-md-10">
                    <div class="card">
                        <div class="card-header card-header-primary">
                            <h4 class="card-title">Edit Profile</h4>
                            <p class="card-category">Complete your profile</p>
                        </div>
                        <div class="card-body">
                            <form>
                                <div class="row" style="margin-top:20px;">
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="bmd-label-floating">Email address</label>
                                            @Html.TextBoxFor(model => model.EmailId, new { @class = "form-control", @readonly = "readonly" })
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="bmd-label-floating">Fist Name</label>
                                            @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control" })

                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="bmd-label-floating">Last Name</label>
                                            @Html.TextBoxFor(model => model.LastName, new { @class = "form-control" })
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="bmd-label-floating">Date of Birth</label>
                                            @Html.TextBoxFor(model => model.DOB, "{0:MM/dd/yyyy}", new { @class = "form-control datepicker", @id = "dtDOB", @readonly = "readonly", @autocomplete = "off" })

                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="bmd-label-floating">Contact No</label>
                                            @Html.TextBoxFor(model => model.ContactNo, new { @class = "form-control" })
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="bmd-label-floating">Current Password</label>
                                            @Html.PasswordFor(model => model.OldPassword, new { @class = "form-control" })

                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="bmd-label-floating">New Password</label>
                                            @Html.PasswordFor(model => model.Password, new { @class = "form-control" })

                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="bmd-label-floating">Confirm Password</label>
                                            @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-control" })
                                        </div>
                                    </div>
                                </div>

                                <button type="submit" class="btn btn-primary pull-right">Update Profile</button>
                                <div class="clearfix"></div>
                            </form>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>


}

<script src="~/assets/Validations.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        $('#dtDOB').datepicker({
            format: 'mm/dd/yyyy',
            showWeek: true
        });
        $('#btnProfilePic').on("click", function () {
            $('#file').click();
        });

    });

    function show(input) {
        if (input.files && input.files[0]) {
            var filerdr = new FileReader();
            filerdr.onload = function (e) {
                $('#user_img').attr('src', e.target.result);
            }
            filerdr.readAsDataURL(input.files[0]);
        }
    }
</script>