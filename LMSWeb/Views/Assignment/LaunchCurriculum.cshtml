    ViewBag.Title = "Curriculum";
    Layout = "~/Views/Shared/_Layout.cshtml";

    LMSBL.DBModels.TblUser objUser = new LMSBL.DBModels.TblUser();
    objUser = (LMSBL.DBModels.TblUser)Session["UserSession"];
